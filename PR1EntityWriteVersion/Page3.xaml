<Page x:Class="PR1EntityWriteVersion.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR1EntityWriteVersion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            
            
        </Grid.RowDefinitions>
        <DataGrid x:Name="OrdersDataGrid" Grid.ColumnSpan="2" SelectionChanged="OrdersDataGrid_SelectionChanged"  IsReadOnly="True"/>
        <TextBox x:Name="NameTbl" Grid.Row="1" />
        <TextBox x:Name="NameTbl1" Grid.Row="2" />
        <Button Grid.Row="3" Content="Добавить" Click="Button_Click"/>
        <Button Grid.Row="4" Content="изменить" Click="Button_Click_1"/>
        <Button Grid.Row="5" Content="Удалить" Click="Button_Click_2" />
    </Grid>
</Page>
